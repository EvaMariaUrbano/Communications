N_sat=18;
N_planes=9;
h=500;
I=15;
mu=25;
t=0:10:24*120;
e_min=20;
lambda=0:15:90;
lat=length(lambda);
l=length(t);

Xs=Orbital_position(N_sat,N_planes,h,I,mu,t);
L=zeros(lat,l);

for i=1:lat
    Xg=Ground_position(lambda(i),t);
    [L(i,:)]=Links(Xs,Xg,e_min);
end

%%
figure; plot(t/60,L); legend 0º 15º 30º 45º 60º 75º 90º; 
