clc; clear;
N_sat=21;
N_planes=8;
h=545;
I=18;
phase=210/(N_planes-1);
t=0:5:24*60*2;
e_min=20;
lambda=[-57 57]; lat=length(lambda);
mu=0; long=length(mu);
l=length(t);

Xs=Orbital_position(N_sat,N_planes,h,I,phase,t);
L=zeros(lat,l);

for i=1:lat
    Xg=Ground_position(lambda(i),mu,t);
    [L(i,:)]=Links(Xs,Xg,e_min);
end


%%
figure; plot(t/60,L); legend  ; xlabel('time (h)'); ylabel('links');
